#alertBox #closeBtn {
	display:block;
	position:relative;
	margin:5px auto;
	padding:3px;
	border: 1px solid #96d1f8;
	width:70px;
	font:0.7em verdana,arial;
	text-transform:uppercase;
	text-align:center;
	color: white;
	background-color: #3B5999;
	text-decoration:none;
}

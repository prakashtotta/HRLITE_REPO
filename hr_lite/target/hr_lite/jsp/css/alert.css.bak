#modalContainer {
	background-color:transparent;
	position:absolute;
	width:100%;
	height:100%;
	top:0px;
	left:0px;
	z-index:10000;
}
#modalContainer1 {
	background-color:transparent;
	position:absolute;
	width:100%;
	height:100%;
	top:0px;
	left:0px;
	z-index:10000;
}

#alertBox {
	border-top: 1px solid #96d1f8;
   background: #7f93bc;
	background-image:url(alert.png);
	background-repeat:no-repeat;
	background-position:20px 30px;
   padding: 5px 10px;
   -webkit-border-radius: 4px;
   -moz-border-radius: 4px;
   border-radius: 8px;
   text-shadow: rgba(0,0,0,0) 0 0px 0;
   color: white;
   font-size: 18px;
   font-family: Georgia, serif;
   text-decoration: none;
   vertical-align: middle;
   }
#alertBox1 {
	border-top: 1px solid #96d1f8;
   background: #7f93bc;
   padding: 5px 10px;
   -webkit-border-radius: 4px;
   -moz-border-radius: 4px;
   border-radius: 4px;
   text-shadow: rgba(0,0,0,0) 0 0px 0;
   color: white;
   font-size: 18px;
   font-family: Georgia, serif;
   text-decoration: none;
   vertical-align: middle;
   }
#modalContainer > #alertBox {
	position:fixed;
}
#modalContainer1 > #alertBox1 {
	position:fixed;
}

#alertBox h1 {
	margin:0;
	font:bold 0.9em verdana,arial;
	background-color: #3B5999;
	color:white;
	border-bottom:1px solid #000;
	padding:2px 0 2px 5px;
}

#alertBox p {
	font:0.7em verdana,arial;
	height:50px;
	padding-left:5px;
	margin-left:55px;
}
#alertBox1 h1 {
	margin:0;
